<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:backgroundTint="@color/main_layout"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    android:id="@+id/midterm_row"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:padding="20dp">


        <TextView
            android:id="@+id/sname_text"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center"
            android:text="Subject"
            android:textColor="@color/text_on_background"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sid_text" />

        <TextView
            android:id="@+id/sid_text"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:text="111111111"
            android:textColor="@color/text_on_background"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mroom_textview"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="left|center"
            android:text="Room"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/sb_text"
            app:layout_constraintTop_toTopOf="@+id/sb_text" />

        <TextView
            android:id="@+id/sb_text"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:gravity="left|center"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mbuilding_textview"
            app:layout_constraintTop_toTopOf="@+id/mbuilding_textview" />

        <ImageButton
            android:id="@+id/building_picture_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/status_event_green"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mbuilding_textview"
            android:layout_width="90sp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="ฺฺBuilding"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/sr_text"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="40dp"
            android:gravity="left|center"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mroom_textview"
            app:layout_constraintTop_toTopOf="@+id/mroom_textview" />


        <TextView
            android:id="@+id/date_textview"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="DD/MM/YYYY"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:text="HH:MM - HH:MM"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/date_textview" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="90sp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:text="ฺฺDate"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/sname_text"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="ฺฺTime"
            android:textColor="@color/text_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>