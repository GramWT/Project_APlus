<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Setting.SubjectsManage.SubjectsManageAdd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/admit_button_update"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:text="Save"
            android:textSize="12sp"
            app:background="@color/button_on_top"
            app:backgroundTint="@color/button_on_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cancel_button_update"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_layout"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <EditText
        android:id="@+id/name_manager_update"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Name"
        android:minHeight="50dp"
        android:maxLines="3"
        android:maxLength="50"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/code_manager_update" />

            <EditText
                android:id="@+id/code_manager_update"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="left|center"
                android:hint="Code"
                android:inputType="number"
                android:maxLength="9"
                android:textColor="@color/text_on_background"
                android:textColorHint="@color/text_hint"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/name_manager_update"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_final_manager_update"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Date"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <TextView
        android:id="@+id/time_final_begin_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Begin"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/date_final_manager_update" />

    <TextView
        android:id="@+id/time_final_end_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="End"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/date_final_manager_update" />

    <TextView
        android:id="@+id/building_final_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:hint="Building"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/time_final_begin_manager_update" />

    <EditText
        android:id="@+id/room_final_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Room"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/time_final_end_manager_update" />

    <TextView
        android:id="@+id/building_mid_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:hint="Building"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/time_mid_begin_manager_update" />

    <EditText
        android:id="@+id/room_mid_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Room"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/time_mid_end_manager_update" />

    <TextView
        android:id="@+id/time_mid_begin_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Begin"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/date_mid_manager_update" />

    <TextView
        android:id="@+id/time_mid_end_manager_update"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:hint="End"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/date_mid_manager_update" />

    <TextView
        android:id="@+id/date_mid_manager_update"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Date"
        android:textColor="@color/text_on_background"
        android:textColorHint="@color/text_hint"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/main_color_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_manager_update">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:text="Mid Term"
            android:textColor="@color/text_same_background"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/main_color_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:text="Final Term"
            android:textColor="@color/text_same_background"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="Date"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="Begin"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="End"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/time_mid_begin_manager_update"
        app:layout_constraintTop_toBottomOf="@+id/date_mid_manager_update" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:text="Building"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:text="Room"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/room_mid_manager_update"
        app:layout_constraintStart_toEndOf="@+id/building_mid_manager_update"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="Date"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="Begin"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="End"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/time_final_begin_manager_update"
        app:layout_constraintTop_toBottomOf="@+id/date_final_manager_update" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:text="Building"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:text="Room"
        android:textColor="@color/text_on_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/building_final_manager_update"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="left|center"
                android:text="Code"
                android:textColor="@color/text_on_background"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:text="Name"
        android:textColor="@color/text_on_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>