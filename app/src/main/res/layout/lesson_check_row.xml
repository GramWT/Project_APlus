<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/main_layout"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_check"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background"
        android:gravity="center|left"
        android:paddingStart="20dp"
        android:text="TextView"
        android:textColor="@color/text_check_dialog_lesson"
        android:textSize="@dimen/font_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginEnd="@dimen/space_16"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_check" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_16"
        android:gravity="left|center"
        android:text="READ"
        android:textColor="@color/text_check_dialog_lesson"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toStartOf="@+id/check1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_check" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="left|center"
        android:text="KNOW"
        android:textColor="@color/text_check_dialog_lesson"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toStartOf="@+id/check2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check1" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="left|center"
        android:text="LEARN"
        android:textColor="@color/text_check_dialog_lesson"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toStartOf="@+id/check3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check2" />

    <CheckBox
        android:id="@+id/check4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check3" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_24"
        android:gravity="left|center"
        android:text="UNDERSTAND"
        android:textColor="@color/text_check_dialog_lesson"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toStartOf="@+id/check4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />
</androidx.constraintlayout.widget.ConstraintLayout>