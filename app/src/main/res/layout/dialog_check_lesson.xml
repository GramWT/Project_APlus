<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_dialog">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/check_list_lesson"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@color/main_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_list_lesson">

        <Button
            android:id="@+id/save_lesson_state"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:text="Save"
            android:textSize="10dp"
            android:textStyle="bold"
            app:background="@color/button_on_top"
            app:backgroundTint="@color/button_on_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lesson_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textColor="@color/text_head_dialog"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/save_lesson_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>